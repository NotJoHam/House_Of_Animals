<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/post_imageView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/maginifier_tool1" />

    <TextView
        android:id="@+id/post_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/post_imageView"
        android:layout_below="@+id/post_imageView"
        android:layout_marginTop="11dp"
        android:text="Username" />

    <TextView
        android:id="@+id/post_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/post_username"
        android:layout_below="@+id/post_username"
        android:text="This is the message" />

    <TextView
        android:id="@+id/post_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/post_imageView"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="9dp"
        android:text="TextVIew" />
</android.widget.RelativeLayout>